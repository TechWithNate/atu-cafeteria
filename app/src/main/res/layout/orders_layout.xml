<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:paddingBottom="10dp"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/food_image_card"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="10dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/coffee_img"
            android:scaleType="centerCrop"
            android:id="@+id/food_image"
            android:contentDescription="@string/app_name"/>

    </com.google.android.material.card.MaterialCardView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textStyle="bold"
        android:id="@+id/food_name"
        android:layout_toEndOf="@+id/food_image_card"
        android:layout_marginStart="20dp"
        android:text="Fried Rice and Chicken"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_toEndOf="@+id/food_image_card"
        android:layout_marginStart="20dp"
        android:text="GHC 130.00"
        android:id="@+id/food_price"
        android:layout_below="@+id/food_name"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textStyle="bold"
        android:id="@+id/date_delivered"
        android:layout_below="@+id/food_image_card"
        android:layout_marginStart="20dp"
        android:text="01 July, 2024"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textStyle="bold"
        android:id="@+id/delivery_status"
        android:layout_toEndOf="@+id/date_delivered"
        android:layout_below="@+id/food_image_card"
        android:layout_marginStart="20dp"
        android:text="Delivered"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"/>


</RelativeLayout>