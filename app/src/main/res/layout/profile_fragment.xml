<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="John Doe"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        android:id="@+id/username"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="+233546651113"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_below="@+id/username"
        android:id="@+id/contact"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contact"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payment"
            android:textColor="@color/main_dark"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:drawableStart="@drawable/baseline_payment"
            android:drawablePadding="20dp"
            android:id="@+id/payment_txt"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Promo Codes"
            android:textColor="@color/main_dark"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:drawableStart="@drawable/baseline_local_offer"
            android:drawablePadding="20dp"
            android:id="@+id/promo_code_txt"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textColor="@color/main_dark"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:drawableStart="@drawable/baseline_account"
            android:drawablePadding="20dp"
            android:id="@+id/profile"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About"
            android:textColor="@color/main_dark"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:drawableStart="@drawable/outline_about"
            android:drawablePadding="20dp"
            android:id="@+id/about"/>

    </LinearLayout>


    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cornerRadius="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Logout"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:backgroundTint="@color/main_dark"
        app:strokeColor="@color/white"
        app:strokeWidth="1dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/logout"/>

</RelativeLayout>